extends homeLayout 
block homeMain 
    form(method ="post",id='form',action = `/course/${course.id}/update`)
        h2 Course update
        .nameBlock  
                
            label(for="courseName") Name: 
            input(type="text", name="name",required,
                value= course && course.name,id="courseName"
                placeholder="--Course name--")

        .titleBlock  
                
            label(for="courseTitle")  Title: 
            input(type="text", name="title",required,
                value= course && course.title,id= "courseTitle"
                laceholder="--Course title--")

        .levelBlock  
                
            label(for="courseLevel") Level: 
            input(type="text", name="level",required,
                value= course && course.level, id="courseLevel"
                placeholder="--course credit level--")

        .creditUnitBlock  
                
            label(for="creditUnit") CreditUnit: 
            input(type="text", name="creditUnit",required,
                value= course && course.creditUnit,id="creditUnit"
                placeholder="--Credit unit--")

        .lecturerIdBlock  
            label(for="course_lecturerId") Selected lecturer
            input(type="text", hidden, name="lecturerId",
                required,id="course_lecturerId",value= lecturer.id,) 
            span.selected  : #{lecturer.fullName}
                        
    button(form='form')   Update
    button
        a(href= '/course')  Cancel Update
