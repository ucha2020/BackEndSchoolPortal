extends homeLayout 
block homeMain 
    if (student)
        .studentPage 
            .mainblock
                h2.header Header
                .profilePicture
                    img(src="", alt="Profile picture", sizes="200px")  
                .card 
                    ul
                        each  value, name in student 
                            li 
                                .infoUnit
                                    p
                                        strong.name  #{`${name}:  `}
                                        span.value  #{value}

            .sideblock
                .infoUnit
                    p
                        strong.name  faculty:  
                        span.value  
                            a(href= `${faculty.url}/display`) #{faculty.name} 

                .infoUnit
                    p
                        strong.name  Department:  
                        span.value  
                            a(href= `${department.url}/display`) #{department.name}
                .infoUnit
                    p
                        strong.name  Course Adviser:  
                        span.value  
                            a(href= courseAdviser && `${courseAdviser.url}/display`) #{courseAdviser?courseAdviser.fullName : "No assigned course adviser yet"}

                .studentCoursesblock
                    .dropdown
                        a(href="#")  
                            strong Student's  Courses 
                            span &#8650
                            span.downArrow
                        ul.dropdown_menu 
                            each course in courses 
                                li
                                    a(href=`${course.url}/display`) 
                                        strong #{ course.name}
  
                .contactInfoblock 
                    h3 Contact info dropdown

                .editblock 
                    .deleteblock 
                        button.delete_btn
                            a(href= `${url}/delete`) Delete student                    

                    .updateblock
                        button.update_btn
                            a(href= `${url}/update`) Update student                    

    