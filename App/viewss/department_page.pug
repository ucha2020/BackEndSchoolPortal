extends homeLayout 
block homeMain 
    if (department)
        .departmentPage 
            .mainblock
                h2.header Header
                .profilePicture
                    img(src="", alt="Profile picture", sizes="200px")  
                .card 
                    ul
                        each  value, name in department 
                            li 
                                .infoUnit
                                    p
                                        strong.name  #{`${name}:  `}
                                        span.value  #{value}

            .sideblock
                .infoUnit
                    p
                        strong.name  faculty:  
                        span.value  
                            a(href= `${faculty.url}/display`) #{faculty.name} 

                .departmentStudentsblock
                    .dropdown
                        a(href="#")  
                            strong   Students under this department:
                            span &#8650
                            span.downArrow 
                        ul.dropdown_menu 
                            each student in studentList  
                                li
                                    a(href=`${student.url}/display`) 
                                        strong #{ student.fullName}
                            else 
                                li No student under this department currently

                .departmentLecturersblock
                    .dropdown
                        a(href="#")  
                            strong  Lecturers under this department:
                            span &#8628
                            span.downArrow  
                        ul.dropdown_menu 
                            each lecturer in lecturerList 
                                li
                                    a(href=`${lecturer.url}/display`) 
                                        strong #{ lecturer.fullName}
                            else 
                                li No lecturer under this department currently
        
                .downArrow
                .editblock 
                    .deleteblock 
                        button.delete_btn
                            a(href= `${url}/delete`) Delete department                    

                    .updateblock
                        button.update_btn
                            a(href= `${url}/update`) Update department 